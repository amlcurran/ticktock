<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/loadeditems">

    <TextView
        android:text="Google I/O"
        android:id="@+id/label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        style="@style/TextAppearanceLightLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14 May 2013"
        android:id="@+id/date"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/days_to_go"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:layout_below="@+id/daysto"
        android:layout_marginTop="-6dp"
        android:fontFamily="sans-serif-light"
        android:textSize="26sp"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14"
        android:id="@+id/daysto"
        android:textSize="148sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/label" />

</RelativeLayout>